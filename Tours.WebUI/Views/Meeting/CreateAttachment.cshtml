
@{
    ViewBag.Title = "افزودن پیوست جدید";
}

<h2>افزودن پیوست جدید</h2>



@using (Html.BeginForm("CreateAttachment", "Meeting", FormMethod.Post,
                                        new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{

    <input type="hidden" value="@ViewBag.MeetingId" name="MeetingId" />
    <div class="form-group">
        @Html.Label("Attachment", "فایل", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="Attachment" id="Attachment" class="form-control" />
            @Html.ValidationMessage("Attachment")
        </div>
    </div>

    <div class="form-group">
        <button class="btn btn-sm btn-success pull-left" type="submit">
            <span class="glyphicon glyphicon-save"></span>
            ذخیره
        </button>
    </div>
}

